base-case-color = rgb(225, 210, 180)
case = darken(base-case-color, 10)
case-corner = darken(case, 15)
case-shadow = darken(case, 50)
case-bottom-shadow = darken(case-shadow, 10)
case-icon = darken(case, 35)
case-icon-shadow = darken(case-icon, 20)

// bezel colors
dark = rgb(25, 25, 20)
mid = rgb(55, 55, 50)
light = rgb(70, 70, 65)
hilight = rgb(85, 85, 80)
bezel-shadow = darken(case, 50)


.bezel
  position: relative
  z-index: 2
  border-color: light
  background: conic-gradient(
    dark 0deg 58deg,
    mid 60deg,

    dark 122deg,
    hilight 127deg 233deg,
    dark 238deg,

    mid 300deg,
  dark 302deg 360deg
  )
  box-shadow: 0px 10px 5px 1px bezel-shadow

.case
  position: relative

  div
    overflow: hidden

  &::before
    content: ""
    border-radius: 8px
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 1
    background: case
    background-image: linear-gradient(
      transparent 50%,
      case 90%,
      case-corner 93%,
      case-shadow 93.9%,
      black 94%,
      case-shadow 94.1%,
      case-corner 95%,
      case-corner 98%,
      case-bottom-shadow 100%
    ),
    linear-gradient(
      90deg,
      case-corner 0%,
      transparent 2%,
      transparent 98%,
      case-corner 100%
    ),
    linear-gradient(
      case-corner 0%,
      transparent 2%,
      transparent 98%,
      case-corner 100%
    )
    filter: url(#noise)
.icon
  foreground: base-case-color
  color: case-icon
